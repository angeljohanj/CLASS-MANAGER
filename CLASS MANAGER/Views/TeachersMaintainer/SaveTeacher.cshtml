@model TeachersModel;
@{
    ViewData["Title"] = "SaveTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card w-75">
    <div class="card-body">
        <h5 class="card-title">REGISTER NEW TEACHER</h5>
        <hr />
        <form method="post" asp-action="SaveTeacher" asp-controller="TeachersMaintainer">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="tchName">
                <div id="emailHelp" class="form-text">Make sure to type teacher's name as it appears on their ID</div>
                <span asp-validation-for="tchName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Lastname</label>
                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="tchLastname">
                <span asp-validation-for="tchLastname" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Age</label>
                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="tchAge">
                <span asp-validation-for="tchAge" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Cedula/ID</label>
                <input type="text" class="form-control" placeholder="Example: 402-1234566-7" id="exampleInputPassword1"
                       asp-for="tchCed">
                <span asp-validation-for="tchCed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="tchAddress">
                <span asp-validation-for="tchAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Telephone</label>
                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="tchTel">
                <span asp-validation-for="tchTel" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Class</label>
                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="tchClass">
                <span asp-validation-for="tchClass" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Center</label>
                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="tchCenter">
                <span asp-validation-for="tchCenter" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Add to roster</button>
            <a asp-action="ListTeachers" asp-controller="TeachersMaintainer" class="btn btn-warning">Go back to teacher's roster</a>
        </form>


    </div>
</div>


