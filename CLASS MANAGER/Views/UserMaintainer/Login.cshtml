@model UserModel 
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/site.js"></script>

<div class="row justify-content-center">
    <div class="col-4 login">
        <div>
            <h3>Login</h3>
        </div>
        <!--this is the login form-->
        <form method="post" asp-action="Login" id="login" asp-controller="UserMaintainer">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Username</label>
                <input type="text" asp-for="UserName" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" asp-for="UserPassword" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="UserPassword" ></span>
            </div>
            
            <button type="button" onclick="validator()" class="btn btn-primary">Enter</button>
            <a class="forgotPass">Forgot password?</a>
        </form>
    </div>
    
</div>
